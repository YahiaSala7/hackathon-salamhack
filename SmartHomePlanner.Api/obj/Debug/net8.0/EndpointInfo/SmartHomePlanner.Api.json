{
  "openapi": "3.0.1",
  "info": {
    "title": "SmartHomePlanner.Api",
    "version": "1.0"
  },
  "paths": {
    "/api/Plan/generate-plan": {
      "post": {
        "tags": [
          "Plan"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/PlanRequestDto"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/PlanRequestDto"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/PlanRequestDto"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/Plan/generate-image": {
      "post": {
        "tags": [
          "Plan"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ImageGenerationDto"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/ImageGenerationDto"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/ImageGenerationDto"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "ImageGenerationDto": {
        "type": "object",
        "properties": {
          "prompt": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "PlanRequestDto": {
        "type": "object",
        "properties": {
          "location": {
            "type": "string",
            "nullable": true
          },
          "area": {
            "type": "number",
            "format": "double"
          },
          "areaUnit": {
            "type": "string",
            "nullable": true
          },
          "bathrooms": {
            "type": "integer",
            "format": "int32"
          },
          "bedrooms": {
            "type": "integer",
            "format": "int32"
          },
          "currency": {
            "type": "string",
            "nullable": true
          },
          "budget": {
            "type": "number",
            "format": "double"
          },
          "livingRoom": {
            "type": "integer",
            "format": "int32"
          },
          "otherRooms": {
            "type": "string",
            "nullable": true
          },
          "occupants": {
            "type": "string",
            "nullable": true
          },
          "kitchen": {
            "type": "integer",
            "format": "int32"
          },
          "style": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      }
    }
  }
}